# תבנית קובץ סביבה לבוט הפרסום האוטומטי
# העתיקו קובץ זה ל-.env ומלאו את הערכים הנדרשים

# ============================================================================
# הגדרות בסיסיות של הבוט
# ============================================================================

# טוקן בוט טלגרם (חובה)
# קבלו מ-@BotFather בטלגרם
TELEGRAM_BOT_TOKEN=

# ID של ערוץ טלגרם לפרסום (אופציונלי)
# לדוגמה: @mychannel או -1001234567890
TELEGRAM_CHANNEL_ID=

# ============================================================================
# מסד נתונים MongoDB
# ============================================================================

# כתובת MongoDB (ברירת מחדל: מקומי)
MONGODB_URI=mongodb://localhost:27017/

# שם מסד הנתונים
DATABASE_NAME=social_media_bot

# ============================================================================
# הגדרות כלליות
# ============================================================================

# מצב בדיקה (true/false) - פרסומים מדומים
MOCK_MODE=true

# פרסום אוטומטי ללא אישור (true/false)
AUTO_POST_MODE=false

# גודל מקסימלי לקבצים במגה-בייט
MAX_FILE_SIZE_MB=50

# תיקיית קבצים זמניים
TEMP_FOLDER=./temp

# רמת לוגים (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# קובץ לוגים
LOG_FILE=bot.log

# ============================================================================
# TIKTOK API
# ============================================================================

TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# ============================================================================
# TWITTER/X API
# ============================================================================

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# ============================================================================
# FACEBOOK & INSTAGRAM API
# ============================================================================

# Facebook Access Token (עובד גם לאינסטגרם)
FACEBOOK_ACCESS_TOKEN=

# Facebook Page ID
FACEBOOK_PAGE_ID=

# Instagram Business Account ID
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# ============================================================================
# LINKEDIN API
# ============================================================================

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# ============================================================================
# YOUTUBE API
# ============================================================================

YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# ============================================================================
# TUMBLR API
# ============================================================================

TUMBLR_CONSUMER_KEY=
TUMBLR_CONSUMER_SECRET=
TUMBLR_OAUTH_TOKEN=
TUMBLR_OAUTH_SECRET=
TUMBLR_BLOG_NAME=

# ============================================================================
# THREADS (META) API - בשלב מאוחר
# ============================================================================

THREADS_ACCESS_TOKEN=

# ============================================================================
# הערות חשובות:
# ============================================================================

# 1. אל תשתפו קובץ .env - הוא מכיל מידע רשוי!
# 2. הוסיפו .env לקובץ .gitignore
# 3. לא כל הטוקנים נדרשים - הבוט יעבוד עם מה שזמין
# 4. במצב MOCK_MODE=true הפרסומים יהיו מדומים
# 5. TELEGRAM_BOT_TOKEN הוא החובה היחידה להפעלת הבוט

# ============================================================================
# איך לקבל טוקנים:
# ============================================================================

# TELEGRAM:
# 1. פתחו צ'אט עם @BotFather
# 2. שלחו /newbot
# 3. תנו שם לבוט
# 4. קבלו את הטוקן

# TWITTER:
# 1. התחברו ל-https://developer.twitter.com
# 2. צרו אפליקציה חדשה
# 3. קבלו API Keys & Tokens

# FACEBOOK/INSTAGRAM:
# 1. התחברו ל-https://developers.facebook.com
# 2. צרו אפליקציה
# 3. הוסיפו Facebook Login ו-Instagram Basic Display
# 4. קבלו Access Token

# LINKEDIN:
# 1. התחברו ל-https://www.linkedin.com/developers
# 2. צרו אפליקציה
# 3. קבלו Client ID & Secret

# YOUTUBE:
# 1. התחברו ל-https://console.developers.google.com
# 2. אפשרו YouTube Data API v3
# 3. צרו OAuth2 credentials

# TUMBLR:
# 1. התחברו ל-https://www.tumblr.com/oauth/apps
# 2. רשמו אפליקציה חדשה
# 3. קבלו Consumer Key & Secret

# TIKTOK:
# 1. התחברו ל-https://developers.tiktok.com
# 2. צרו אפליקציה
# 3. קבלו Client Key & Secret
